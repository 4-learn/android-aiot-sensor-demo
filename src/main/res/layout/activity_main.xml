<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- 顯示方位角（Azimuth）的 TextView -->
    <TextView
        android:id="@+id/textViewAzimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azimuth: 0.0"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <!-- 顯示俯仰角（Pitch）的 TextView -->
    <TextView
        android:id="@+id/textViewPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch: 0.0"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <!-- 顯示滾動角（Roll）的 TextView -->
    <TextView
        android:id="@+id/textViewRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll: 0.0"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

</LinearLayout>